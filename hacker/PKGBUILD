# Network Analysis
depends+=(
  'nmap'
  'wireshark-qt'
  'tcpdump'
  'gnu-netcat'
  'socat'
  'tshark'
)

# Password Cracking
depends+=(
  'hydra'
  'john'
  'hashcat'
)

# Web Security
depends+=(
  'nikto'
  'curl'
  'burpsuite'
)

# Debugging and Reverse Engineering
depends+=(
  'gdb'
  'radare2'
  'binwalk'
  'ghidra'
  'cutter'
)
# Binary exploitation
depends+=(
  'pwndbg-git'
  'gef'
  'peda-git'
)

# System Utilities
depends+=(
  'htop'
  'tmux'

)
